   <name>EclipseFormatter</name>
   <url>http://maven.apache.org</url>
   <properties>
      <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
   </properties>
   <repositories>
      <repository>
         <id>external-repo</id>
         <name>m2</name>
         <url>http://repo1.maven.org/maven2/</url>
      </repository>
      <repository>
         <id>external2-repo</id>
         <name>sun</name>
         <url>http://download.java.net/maven/2/</url>
      </repository>
      <repository>
         <id>spida</id>
         <name>spida-repo</name>
         <url>https://www.spidasoftware.com/artifactory/repo</url>
      </repository>
   </repositories>
   <build>
      <resources>
         <resource>
            <directory>src/main/resources</directory>
         </resource>
      </resources>
      <plugins>
         <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
               <encoding>UTF-8</encoding>
               <fork>true</fork>
               <meminitial>64m</meminitial>
               <maxmem>512m</maxmem>
            </configuration>
         </plugin>
         <!--Substitute this plugin for the one below if we decide to switch to maven 3 -->
